<EditorStyle name="TomorrowNightBright" _description="MonoDevelopment Tomorrow Night Bright Theme">
  
  <!-- Color -->
  <Color value="#000000" name="color_background" />
  <Color value="#2a2a2a" name="color_current_line" />
  <Color value="#424242" name="color_selection" />
  <Color value="#eaeaea" name="color_foreground" />
  <Color value="#969896" name="color_comment" />
  <Color value="#d54e53" name="color_red" />
  <Color value="#e78c45" name="color_orange" />
  <Color value="#e7c547" name="color_yellow" />
  <Color value="#b9ca4a" name="color_green" />
  <Color value="#70c0b1" name="color_aqua" />
  <Color value="#7aa6da" name="color_blue" />
  <Color value="#c397d8" name="color_purple" />
  
  
  <Color value="#4A440C" name="color_searchresult" />
  <Color value="#9A440C" name="color_searchresult_main" />
  
  <Color name="bg_dark_brownish" value="#3B3A32" />
  <Color name="error_bg" value="#D40000" />

  <!-- Style -->
  <Style name="text" color="color_foreground" bgColor="color_background" />
  <Style name="text.background.readonly" color="color_background" />
  <Style name="text.selection" color="color_selection" bgColor="#000000" />
  <Style name="text.selection.inactive" color="#FDD99B" bgColor="#A9A9A9" />
  <Style name="text.background.searchresult" color="color_searchresult" />
  <Style name="text.background.searchresult-main" color="color_searchresult_main" weight="Bold" />
  <Style name="text.link" color="#0000FF" />
  <Style name="text.punctuation" color="color_red" />
  <Style name="text.preprocessor" color="#336699" />
  <Style name="text.preprocessor.keyword" color="#336699" weight="Bold" />
  <Style name="text.markup" color="color_green" />
  <Style name="text.markup.tag" color="color_blue" />
  
  <Style name="linenumber"           color="#BCBCBC"     bgColor="bg_dark_brownish" />
  <Style name="linenumber.highlight" color="color_green" />
  
  <Style name="iconbar"           color="bg_dark_brownish" />
  <Style name="iconbar.separator" color="bg_dark_brownish" />
  
  <Style name="fold" color="#465457" />
  <Style name="fold.highlight" color="#565248" />
  <Style name="fold.togglemarker" color="#465457" />
  
  <Style name="marker.line.dirty" color="#F92570" />
  <Style name="marker.line.changed" color="color_green" />
  <Style name="marker.line" color="#3E3D31" />
  <Style name="marker.ruler" color="#B3DEFD" />
