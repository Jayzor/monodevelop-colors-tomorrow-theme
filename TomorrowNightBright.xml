  <Style name="marker.breakpoint" color="#FFFFFF" bgColor="#7D0000" />
  <Style name="marker.breakpoint.color1" color="#FFFFFF" />
  <Style name="marker.breakpoint.color2" color="#7D0000" />
  <Style name="marker.breakpoint.disabled.background" color="#EDDCDC" />
  <Style name="marker.debug.currentline" color="#000000" bgColor="#FEFF00" />
  <Style name="marker.debug.currentline.color1" color="#FEFF00" />
  <Style name="marker.debug.currentline.color2" color="#FEFECC" />
  <Style name="marker.debug.currentline.border" color="#656600" />
  <Style name="marker.debug.stackline" color="#000000" bgColor="#80FF80" />
  <Style name="marker.debug.stackline.color1" color="#80FF80" />
  <Style name="marker.debug.stackline.color2" color="#CCFECC" />
  <Style name="marker.debug.stackline.border" color="#336633" />
  <Style name="marker.breakpoint.invalid.background" color="#EDDCDC" />
  <Style name="marker.breakpoint.invalid.color1" color="#EDDCDC" />
  <Style name="marker.breakpoint.invalid.border" color="#7D0000" />
  <Style name="marker.bracket" color="#6699CC" bgColor="#AACCEE" />
  <Style name="marker.bookmark.color1" color="#FDD99B" />
  <Style name="marker.bookmark.color2" color="#816647" />
  <Style name="marker.underline.error" color="#FF0000" />
  <Style name="marker.underline.warning" color="#FFA500" />
  <Style name="marker.underline.suggestion" color="#8FC68F" />
  <Style name="marker.underline.hint" color="#8F8FC6" />
  <Style name="marker.template.primary_template" color="#015A01" bgColor="#98FC66" />
  <Style name="marker.template.primary_highlighted_template" color="#015A01" bgColor="#CCFF99" />
  <Style name="marker.template.secondary_template" color="#FFFFFF" bgColor="#FFFFFF" />
  <Style name="marker.template.secondary_highlighted_template" color="#D9BB7A" bgColor="#FDD99B" />
  
  <Style name="diff.line-added"       color="#008A8B" />
  <Style name="diff.line-removed"     color="#6A59CD" />
  <Style name="diff.line-changed"     color="#336699" />
  <Style name="diff.header"           color="#008000" weight="Bold" />
  <Style name="diff.header-seperator" color="#0000FF" />
  <Style name="diff.header-oldfile"   color="#008000" weight="Bold" />
  <Style name="diff.header-newfile"   color="#008000" weight="Bold" />
  <Style name="diff.location"         color="#FB8B00" />

  <Style name="bubble.warning"      color="#000000" bgColor="#F3EEDA" />
  <Style name="bubble.warning.text" color="#000000" />
  <Style name="bubble.error"        color="#FFFFFF" bgColor="#7D0000" />
  <Style name="bubble.error.text"   color="#000000" />
  
  <Style name="template"           color="#000000" />
  <Style name="template.tag"       color="#FF00FF" />
  <Style name="template.directive" color="#FF00FF" />
  
  <Style name="comment"              color="color_comment" />
  <Style name="comment.tag"          color="color_comment" />
  <Style name="comment.line"         color="color_comment" />
  <Style name="comment.tag.line"     color="color_comment" />
  <Style name="comment.block"        color="color_comment" />
  <Style name="comment.tag.block"    color="color_comment" />
  <Style name="comment.doc"          color="color_green" />
  <Style name="comment.tag.doc"      color="color_green" />
  <Style name="comment.keyword"      color="color_green" weight="Bold" />
  <Style name="comment.keyword.todo" color="color_green" weight="Italic" />
  
  <Style name="constant"               color="color_aqua" />
  <Style name="constant.digit"         color="color_aqua" />
  <Style name="constant.language"      color="color_aqua" />
  <Style name="constant.language.void" color="color_yellow" />
  
  <Style name="string"        color="color_aqua" />
  <Style name="string.single" color="color_aqua" />
  <Style name="string.double" color="color_aqua" />
  <Style name="string.other"  color="color_aqua" />

  <Style name="keyword"             color="color_purple" />
  <Style name="keyword.access"      color="color_green"  />
  <Style name="keyword.namespace"   color="color_purple" />
  <Style name="keyword.property"    color="color_green"  />
  <Style name="keyword.modifier"    color="color_purple" />
  <Style name="keyword.type"        color="color_yellow"   />
  <Style name="keyword.declaration" color="color_yellow" />
  <Style name="keyword.operator"    color="color_red" weight="Bold" />
  <Style name="keyword.operator.declaration" color="color_red" weight="Bold" />
  <Style name="keyword.selection"   color="color_purple" />
  <Style name="keyword.iteration"   color="color_purple" />
  <Style name="keyword.jump"        color="color_orange" weight="Bold" />
  <Style name="keyword.context"     color="color_purple" />
  <Style name="keyword.exceptions"  color="color_blue" weight="Bold" />
  <Style name="keyword.parameter"   color="color_purple"   />
  <Style name="keyword.misc"        color="color_orange" />
  <Style name="keyword.semantic.type"  color="color_green" />
  <Style name="keyword.semantic.field" color="color_green" />
  <Style name="keyword.semantic.error" color="color_foreground" bgColor="error_bg" weight="Italic" />

  <Style name="marker.whitespace.eol" color="#D9BB7A" />
  <Style name="marker.breakpoint.invalid" color="#FFFFFF" bgColor="#7D0000" />
</EditorStyle>
